# WeaveAI Personal - Environment Configuration Template
# Copy this to .env and fill in your values

# ============================================================================
# DATABASE (Neon PostgreSQL) - REQUIRED
# ============================================================================
DATABASE_URL="postgresql://USER:PASSWORD@HOST/DATABASE?sslmode=require"

# ============================================================================
# AI PROVIDERS - REQUIRED (at least one)
# ============================================================================
# Anthropic Claude (recommended for personal use)
ANTHROPIC_API_KEY="sk-ant-api03-..."

# OpenAI (optional, for GPT-4 embeddings)
OPENAI_API_KEY="sk-..."

# ============================================================================
# VECTOR DATABASE (Pinecone) - REQUIRED
# ============================================================================
PINECONE_API_KEY="pcsk_..."
PINECONE_ENVIRONMENT="us-east-1-aws"  # or your region
PINECONE_INDEX_NAME="weaveai-personal"

# ============================================================================
# AUTHENTICATION (OAuth) - REQUIRED
# ============================================================================
# You can reuse your existing OAuth credentials from weaveai-enterprise

# Google OAuth
AUTH_GOOGLE_ID="1093527084995-ne9a84445ofhjqtm4atu9dfk2sun0d06.apps.googleusercontent.com"
AUTH_GOOGLE_SECRET="GOCSPX-..."

# GitHub OAuth (optional)
AUTH_GITHUB_ID="..."
AUTH_GITHUB_SECRET="..."

# Auth.js Secret (generate with: openssl rand -base64 32)
AUTH_SECRET="..."

# ============================================================================
# FILE STORAGE (AWS S3/R2) - OPTIONAL (for file uploads)
# ============================================================================
AWS_ACCESS_KEY_ID="..."
AWS_SECRET_ACCESS_KEY="..."
AWS_REGION="us-east-1"
AWS_S3_BUCKET="weaveai-personal-uploads"

# Or Cloudflare R2
R2_ACCOUNT_ID="..."
R2_ACCESS_KEY_ID="..."
R2_SECRET_ACCESS_KEY="..."
R2_BUCKET_NAME="weaveai-personal"

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
PUBLIC_APP_NAME="WeaveAI Personal"
PUBLIC_APP_URL="http://localhost:5173"  # Update for production

# ============================================================================
# FEATURES TO REMOVE (Enterprise-only, not needed for personal)
# ============================================================================
# These can be left empty or removed:
# - STRIPE_SECRET_KEY (no billing for personal use)
# - STRIPE_WEBHOOK_SECRET
# - FATHOM_API_KEY (no analytics needed)
# - SLACK_BOT_TOKEN (no team collaboration)
# - GOOGLE_ADS_* (enterprise client management)
