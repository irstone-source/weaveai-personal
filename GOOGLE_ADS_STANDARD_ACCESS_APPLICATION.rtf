{\pard \ql \f0 \sa180 \li0 \fi0 \f1 import \{ GoogleAdsApi, Customer \} from 'google-ads-api';\line
\line
export interface GoogleAdsConfig \{\line
  developerToken: string;\line
  clientId: string;\line
  clientSecret: string;\line
  refreshToken: string;\line
  customerId: string;\line
\}\line
\line
function getCustomer(config: GoogleAdsConfig): Customer \{\line
  const client = new GoogleAdsApi(\{\line
    client_id: config.clientId,\line
    client_secret: config.clientSecret,\line
    developer_token: config.developerToken,\line
  \});\line
\line
  const customerId = config.customerId.replace(/-/g, '');\line
\line
  return client.Customer(\{\line
    customer_id: customerId,\line
    refresh_token: config.refreshToken,\line
    login_customer_id: customerId,\line
  \});\line
\}\line
\line
export async function listCampaigns(\line
  config: GoogleAdsConfig,\line
  options: \{\line
    startDate?: string;\line
    endDate?: string;\line
    includeMetrics?: boolean;\line
  \} = \{\}\line
): Promise<GoogleAdsCampaign[]> \{\line
  const \{ startDate, endDate, includeMetrics = true \} = options;\line
  const customer = getCustomer(config);\line
\line
  let query = `\line
    SELECT\line
      campaign.id,\line
      campaign.name,\line
      campaign.status,\line
      campaign.advertising_channel_type,\line
      campaign.bidding_strategy_type,\line
      metrics.clicks,\line
      metrics.impressions,\line
      metrics.cost_micros,\line
      metrics.conversions,\line
      metrics.ctr\line
    FROM campaign\line
    WHERE campaign.status != 'REMOVED'\line
  `;\line
\line
  if (startDate && endDate) \{\line
    query += ` AND segments.date BETWEEN '$\{startDate\}' AND '$\{endDate\}'`;\line
  \}\line
\line
  const results = await customer.query(query);\line
\line
  // Transform and return results\line
  return Array.from(results).map(row => (\{\line
    id: row.campaign.id?.toString() || '',\line
    name: row.campaign.name || '',\line
    status: row.campaign.status || 'UNKNOWN',\line
    metrics: \{\line
      clicks: Number(row.metrics.clicks || 0),\line
      cost: Number(row.metrics.cost_micros || 0) / 1000000,\line
      conversions: Number(row.metrics.conversions || 0),\line
      // ... additional metrics\line
    \}\line
  \}));\line
\}\par}
