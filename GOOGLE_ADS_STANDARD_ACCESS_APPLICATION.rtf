{\pard \ql \f0 \sa180 \li0 \fi0 \f1 import * as googleAds from '../integrations/google-ads-client';\line
import \{ db \} from '../db';\line
import \{ google_ads_campaigns, google_ads_campaign_metrics \} from '../db/schema';\line
\line
export async function syncGoogleAdsData() \{\line
  console.log('Starting Google Ads sync...');\line
\line
  const config: googleAds.GoogleAdsConfig = \{\line
    developerToken: process.env.GOOGLE_ADS_DEVELOPER_TOKEN!,\line
    clientId: process.env.GOOGLE_ADS_CLIENT_ID!,\line
    clientSecret: process.env.GOOGLE_ADS_CLIENT_SECRET!,\line
    refreshToken: process.env.GOOGLE_ADS_REFRESH_TOKEN!,\line
    customerId: process.env.GOOGLE_ADS_CUSTOMER_ID!,\line
  \};\line
\line
  // Get date range for last 24 hours\line
  const dateRange = googleAds.getDateRange(1);\line
\line
  // Fetch all accounts under MCC\line
  const accounts = await googleAds.listCustomerAccounts(config);\line
\line
  // Sync each account\line
  for (const account of accounts) \{\line
    if (account.manager) continue; // Skip manager accounts\line
\line
    try \{\line
      const accountConfig = \{ ...config, customerId: account.customerId \};\line
      const campaigns = await googleAds.listCampaigns(accountConfig, \{\line
        startDate: dateRange.startDate,\line
        endDate: dateRange.endDate,\line
        includeMetrics: true,\line
      \});\line
\line
      // Upsert campaigns and metrics to database\line
      for (const campaign of campaigns) \{\line
        await db.insert(google_ads_campaigns)\line
          .values(\{\line
            id: campaign.id,\line
            customer_id: account.customerId,\line
            name: campaign.name,\line
            status: campaign.status,\line
            // ... additional fields\line
          \})\line
          .onConflictDoUpdate(\{\line
            target: google_ads_campaigns.id,\line
            set: \{ updated_at: new Date() \}\line
          \});\line
\line
        await db.insert(google_ads_campaign_metrics)\line
          .values(\{\line
            campaign_id: campaign.id,\line
            date: dateRange.endDate,\line
            clicks: campaign.metrics.clicks,\line
            cost: campaign.metrics.cost,\line
            // ... additional metrics\line
          \})\line
          .onConflictDoNothing(); // Prevent duplicate daily records\line
      \}\line
\line
      console.log(`Synced $\{campaigns.length\} campaigns for $\{account.descriptiveName\}`);\line
    \} catch (error) \{\line
      console.error(`Error syncing $\{account.descriptiveName\}:`, error);\line
    \}\line
  \}\line
\line
  console.log('Google Ads sync complete');\line
\}\par}
