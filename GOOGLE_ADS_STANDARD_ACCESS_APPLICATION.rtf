{\pard \ql \f0 \sa180 \li0 \fi0 \f1 -- Campaign master data\line
CREATE TABLE google_ads_campaigns (\line
  id TEXT PRIMARY KEY,\line
  customer_id TEXT NOT NULL,\line
  name TEXT NOT NULL,\line
  status TEXT NOT NULL,\line
  advertising_channel_type TEXT,\line
  bidding_strategy_type TEXT,\line
  start_date DATE,\line
  end_date DATE,\line
  created_at TIMESTAMP DEFAULT NOW(),\line
  updated_at TIMESTAMP DEFAULT NOW()\line
);\line
\line
-- Daily performance metrics\line
CREATE TABLE google_ads_campaign_metrics (\line
  id SERIAL PRIMARY KEY,\line
  campaign_id TEXT REFERENCES google_ads_campaigns(id),\line
  date DATE NOT NULL,\line
  clicks INTEGER DEFAULT 0,\line
  impressions INTEGER DEFAULT 0,\line
  cost DECIMAL(10,2) DEFAULT 0,\line
  conversions DECIMAL(10,2) DEFAULT 0,\line
  conversions_value DECIMAL(10,2) DEFAULT 0,\line
  average_cpc DECIMAL(10,2) DEFAULT 0,\line
  ctr DECIMAL(5,4) DEFAULT 0,\line
  cost_per_conversion DECIMAL(10,2) DEFAULT 0,\line
  synced_at TIMESTAMP DEFAULT NOW(),\line
  UNIQUE(campaign_id, date)\line
);\line
\line
-- Account hierarchy\line
CREATE TABLE google_ads_accounts (\line
  customer_id TEXT PRIMARY KEY,\line
  descriptive_name TEXT NOT NULL,\line
  currency_code TEXT,\line
  time_zone TEXT,\line
  manager BOOLEAN DEFAULT FALSE,\line
  parent_customer_id TEXT,\line
  updated_at TIMESTAMP DEFAULT NOW()\line
);\par}
